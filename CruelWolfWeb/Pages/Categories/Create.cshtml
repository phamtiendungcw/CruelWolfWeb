@page
@model CruelWolfWeb.Pages.Categories.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-lg-3 ">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px;">Back to List</a>
        <div asp-validation-summary="All"></div>
    </div>
    @*Nếu chỉ có một Page partial thì có thể thêm luôn trong Form*@
    @*<partial name="Shared/_ValidationScriptsPartial" />*@
</form>

@*Nếu có nhiều page partial thì sử dụng section Script*@
@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial" />
    }
}
